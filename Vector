#include<iostream>
#include<vector>
using namespace std;

int main()
{
	int i,n,element=0; 
	vector <int> v;
	
	cout<<"Enter the size of vector"<<endl; //user can enter the size of vector they want
	cin>>n;
	
	cout<<"Enter the elements into the vector"<<endl;
	for(i=0;i<n;i++) //loop for taking elements inside vector by user
	{
		cin>>element;  
		v.push_back(element);
	}
	
	cout<<"\nVector size: ";
	cout<<v.size()<<endl;
	for(i=0;i<n;i++) //loop for printing the vector
	{
		cout<<v[i]<<" ";
	}
}
